<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnac.hzinfo.modules.sys.dao.AttachmentDao">
    <insert id="insert" parameterType="com.hnac.hzinfo.modules.sys.entity.Attachment">
        <selectKey keyProperty="attachmentID" resultType="int" order="AFTER" >
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO t_notice_record_attachment(
        `savePath`
        ) VALUES (
        #{savePath}
        )
    </insert>

    <select id="getAttachmentByID" resultType="com.hnac.hzinfo.modules.sys.entity.Attachment">
        SELECT * FROM t_notice_record_attachment a
         WHERE a.attachmentID = #{0}
    </select>

    <delete id="deleteAttachmentByID" >
        DELETE a FROM t_notice_record_attachment a
        WHERE a.attachmentID = #{0}
    </delete>

    <delete id="deleteAttachmentsByIDs" >
        DELETE a FROM t_notice_record_attachment a
        <where>
            <if test="attachmentsID.size()>0">
                a.attachmentID in
                <foreach collection="attachmentsID" index="index" item="item" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </delete>

    <select id="getAttachmentsNameByIDs" resultType="com.hnac.hzinfo.modules.sys.entity.Attachment">
        SELECT * FROM t_notice_record_attachment a
        <where>
            <if test="attachmentsID.size()>0">
            a.attachmentID in
                <foreach collection="attachmentsID" index="index" item="item" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>

</mapper>